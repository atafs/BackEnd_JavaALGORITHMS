package io.bytes.writer;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.OutputStream;

public class WriteFileBytes {
	
	//MAIN
	public void writeFile(String dataToXml) {
		//CREATE FILE (path of it)
		File path = new File("xml//report.xml");
		
		//OUT: WRITER
		try {
			OutputStream outputStream = new FileOutputStream(path);
			outputStream.write(dataToXml.getBytes());
			System.err.println("WROTE IN BYTES: \t" + dataToXml);
			outputStream.close();
			
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		} 
	}
}
